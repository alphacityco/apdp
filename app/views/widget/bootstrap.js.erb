(function() {

  var WidgetView ={
    container: "<%= @container %>",
    viewUrl:   "<%= @view_url %>"
  };

  // Loading jQuery
  var jQuery;

  function scriptLoadHandler() {
    jQuery = window.jQuery.noConflict(true);
    main();
  }

  if (window.jQuery === undefined) {
    var scriptTag = document.createElement('script');
    scriptTag.setAttribute("type","text/javascript");
    scriptTag.setAttribute("src", "http://code.jquery.com/jquery-1.11.0.min.js");
    if (scriptTag.readyState) {
      scriptTag.onreadystatechange = function () { // For old versions of IE
        if (this.readyState == 'complete' || this.readyState == 'loaded') {
          scriptLoadHandler();
        }
      };
    } else {
      scriptTag.onload = scriptLoadHandler;
    }
    (document.getElementsByTagName("head")[0] || document.documentElement).appendChild(scriptTag);
  } else {
    jQuery = window.jQuery;
    main();
  }

  // Boostraping widget view
  function main() {
    jQuery(document).ready(function($) {
      var containerSelector = (APDPWidget ? APDPWidget.container : void 0) || WidgetView.container;
      var $container = $(containerSelector)
      $container.attr('style', 'text-align:center;');
      $container.append('<img src="https://dl.dropboxusercontent.com/u/4282792/spinner.gif">');

      $.ajax({
        url:       WidgetView.viewUrl,
        dataType:  "html",
        success:   function(data) {
          $container.empty();
          $container.append(data);
        },
        error:     function(){
          console.log("Something bad happend trying to load " + WidgetView.viewUrl);
        }
      });

    });
  }

})();
